@model IEnumerable<MeuPrimeiroProjeto.Models.Universidade>

@{
    ViewBag.Title = "Index";
}

<style>

    a.link {
        color: white;
    }
</style>

<h2>Universidades</h2>
<div class="container col-md-2">
    <button type="button" class="btn btn-success">
        @Html.ActionLink("Novo", "Create", null, new { @class = "link" })
    </button>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UF)
        </th>
        <th>
            Ação
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UF)
            </td>
            <td>
                <button type="button" class="btn btn-primary">
                    @Html.ActionLink("Editar", "Edit", new { id = item.UniversidadeID },new { @class = "link" })
                </button>
                <button type="button" class="btn btn-warning">
                    @Html.ActionLink("Detalhes", "Details", new { id = item.UniversidadeID }, new { @class = "link" })
                </button>
                <button type="button" class="btn btn-danger">
                    @Html.ActionLink("Excluir", "Delete", new { id = item.UniversidadeID }, new { @class = "link" })
                </button>
            </td>
        </tr>
    }

</table>
